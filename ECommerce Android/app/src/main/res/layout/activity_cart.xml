<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.CartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cart Details"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@android:color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black">
            </View>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/ll_title">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="OnePlus 6"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_product_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_title"
                android:id="@+id/ll_img"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/oneplus6"
                    android:id="@+id/imgv_product_image"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/v_base_border"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#2E8B57"
                    android:gravity="center_vertical"
                    android:text="Buy Now"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:id="@+id/bt_buy_now"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="#2E8B57"
                    android:gravity="center_vertical"
                    android:text="Remove"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:id="@+id/bt_remove"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="serif-monospace"
                    android:text="Rs.40000"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:id="@+id/tv_product_price"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:id="@+id/v_base_border"
                android:layout_height="0.5dp"
                android:layout_below="@+id/ll_img"
                android:layout_marginTop="10dp"
                android:background="@android:color/black" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>